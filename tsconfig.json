{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "react-native",
    "lib": ["esnext.array", "esnext.asynciterable", "esnext", "es2017"],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "paths": {
      "@assets/*": ["src/ui/assets/*"],
      "@components/*": ["src/ui/components/*"],
      "@epics/*": ["src/redux/epics/*"],
      "@hoc/*": ["src/hoc/*"],
      "@hooks/*": ["src/hooks/*"],
      "@navigation/*": ["src/ui/navigation/*"],
      "@services/*": ["src/services/*"],
      "@slices/*": ["src/redux/slices/*"],
      "@ui/*": ["src/ui/*"],
      "@util/*": ["src/utilities/*"],
      "@type/*": ["src/type/*"]
    },
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2017"
  },
  "exclude": [
    "dist",
    "node_modules",
    "jest.config.js",
    "App.js",
    "src/aws-exports.js",
    "ReactotronConfig.js"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.ts",
    "__tests__/App-test.js",
    "rn-cli.config.js",
    "App.ts",
    "@types/**/*.d.ts"
  ],
  "types": []
}
